<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/title" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dip"
            android:gravity="center"
            android:text="欢迎光临夏日酒店"
            android:textColor="#FFFFFF"
            android:textSize="20dip"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/orderImageButton02"
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="0dip"
                android:background="@drawable/before_button" >
            </ImageButton>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="11dip"
        android:layout_marginRight="11dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/navigator"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="68dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="首页"
            android:textColor="#FFFFFF"
            android:textSize="14dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:layout_width="68dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="用户信息"
            android:textColor="#FFFFFF"
            android:textSize="14dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:layout_width="68dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="资源信息"
            android:textColor="#FFFFFF"
            android:textSize="14dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:layout_width="68dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/hilight"
            android:gravity="center"
            android:text="订单查看"
            android:textColor="#FFFFFF"
            android:textSize="14dip"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dip"
            android:gravity="left"
            android:text="订单编号"
            android:textColor="@color/black"
            android:textSize="15dip"
            android:textStyle="bold" >
        </TextView>
        <!--
    <TextView
		android:text="下  定  人"
		android:textSize="15dip" 
    	android:textColor="@color/black"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="80dip"
		android:layout_marginRight="10dip"
		android:textStyle="bold"
	>
	</TextView>
        -->

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="下单时间"
            android:textColor="@color/black"
            android:textSize="15dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:gravity="right"
            android:text="状      态"
            android:textColor="@color/black"
            android:textSize="15dip"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>
    <!--
    <LinearLayout
    	android:orientation="vertical"
        android:layout_marginTop="4dip"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/yellow"
    >
    -->

    <ListView
        android:id="@+id/orderListView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>